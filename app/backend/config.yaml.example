server:
  port: ":8080"
  read_timeout: "30s"
  write_timeout: "30s"
  idle_timeout: "120s"

database:
  host: "localhost"
  port: 5432
  user: "tms"
  password: "tms123"
  dbname: "tms"
  sslmode: "disable"
  max_open_conns: 25
  max_idle_conns: 25
  conn_max_lifetime: "5m"
  url: "postgres://tms:tms123@localhost:5432/tms?sslmode=disable"

redis:
  host: "localhost"
  port: 6380
  password: ""
  db: 0
  url: "redis://localhost:6380/0"

minio:
  endpoint: "localhost:9000"
  access_key_id: "minioadmin"
  secret_access_key: "minioadmin"
  use_ssl: false
  bucket_name: "tms-attachments"

smtp:
  host: "localhost"
  port: 1025
  username: ""
  password: ""
  from: "noreply@example.com"

jwt:
  secret: "your-super-secret-jwt-key-change-this-in-production"
  access_token_expiry: "150m"
  refresh_token_expiry: "240h"
  magic_link_expiry: "1h"
  unauth_token_expiry: "24h"

cors:
  allowed_origins:
    - "*"
  allow_credentials: false

features:
  enable_registration: true
  enable_email_login: true
  enable_magic_links: true
  require_corporate_email: true  # Set to false to allow personal email domains

agentic:
  enabled: true
  greeting_detection: true
  knowledge_responses: true
  agent_assignment: false  # Enable when Phase 3 is complete
  agent_request_detection: true  # Phase 3: Agent request detection
  notification_alerts: false  # Enable when Phase 4 is complete
  greeting_confidence: 0.4  # 40% minimum confidence for greeting detection
  knowledge_confidence: 0.6  # 60% minimum confidence for knowledge responses
  domain_relevance_confidence: 0.5  # 50% minimum for domain relevance
  agent_request_confidence: 0.7  # 70% minimum for agent request detection
  agent_request_threshold: 0.7  # 70% threshold for triggering agent request
  greeting_keywords:
    - "hello"
    - "hi"
    - "hey"
    - "greetings"
    - "good morning"
    - "good afternoon"
    - "good evening"
    - "howdy"
    - "hiya"
  agent_request_keywords:
    - "agent"
    - "human"
    - "speak to someone"
    - "talk to agent"
    - "connect me"
    - "customer service"
  negative_keywords:
    - "help"
    - "support"
    - "problem"
    - "issue"
    - "error"
    - "bug"
    - "pricing"
    - "cost"
    - "payment"
    - "refund"
    - "technical"
    - "api"
  response_timeout_ms: 2000  # 2 seconds max for AI responses
  max_concurrent_sessions: 100  # Maximum concurrent chat sessions

resend:
  api_key: ""  # Set this to your Resend API key
  from_email: "noreply@hith.chat"  # Configure with your verified domain

ai:
  openai:
    api_key: ""
    model: "gpt-4"
    max_tokens: 500
    temperature: 0.7
