# Dockerfile.dev
# Simple development image with hot-reload using uvicorn --reload
FROM python:3.12-slim

WORKDIR /app

# Install system dependencies required for development (postgres client and build tools)
RUN apt-get update && apt-get install -y \
    gcc \
    g++ \
    postgresql-client \
    libpq-dev \
    python3-dev \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy source so container can run even without a bind mount (compose will mount your local tree in dev)
COPY src/ ./src/

# Make local package imports work
ENV PYTHONPATH=/app

# Use uvicorn's built-in reload for hot-reload in development
# Allow PORT override; fallback to 5000
CMD ["sh", "-c", "uvicorn src.main:app --host 0.0.0.0 --port ${PORT:-5000} --reload"]
